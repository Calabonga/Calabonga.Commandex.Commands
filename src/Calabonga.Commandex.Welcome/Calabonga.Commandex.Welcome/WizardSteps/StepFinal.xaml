<UserControl x:Class="Calabonga.Commandex.Welcome.WizardSteps.StepFinal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:welcome="clr-namespace:Calabonga.Commandex.Welcome"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Title"/>
            <TextBlock Text="{Binding Title}"/>
            
            <TextBlock Text="FirstName"/>
            <TextBlock FontWeight="Bold" Text="{Binding Person.FirstName}"/>
            
            <TextBlock Text="MiddleName"/>
            <TextBlock FontWeight="Bold" Text="{Binding Person.MiddleName}"/>
            
            <TextBlock Text="LastName"/>
            <TextBlock FontWeight="Bold" Text="{Binding Person.LastName}"/>

        </StackPanel>
    </Grid>
</UserControl>
